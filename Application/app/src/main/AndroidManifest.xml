<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.locator.chield.secure.application">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ConfirmRegisterActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".MainKidsActivity" />
        <activity android:name=".MainParentActivity" />
        <activity
            android:name=".ParentLogActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".RegisterActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".AddParentActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ViewParentActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".AddKidActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".ViewKidActivity"></activity>
    </application>

</manifest>