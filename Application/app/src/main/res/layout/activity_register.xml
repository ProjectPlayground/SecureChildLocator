<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.locator.chield.secure.application.RegisterActivity">

    <EditText
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:background="#A9E2F3"
        android:id="@+id/editTextEmailRegister"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/buttonRegister"
        android:layout_alignStart="@+id/buttonRegister" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Password"
        android:id="@+id/textView2"
        android:textColor="#0000FF"
        android:layout_below="@+id/editTextEmailRegister"
        android:layout_alignLeft="@+id/editTextEmailRegister"
        android:layout_alignStart="@+id/editTextEmailRegister"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:background="#A9E2F3"
        android:id="@+id/editTextPassRegister"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="11dp" />

    <Button
        android:layout_width="350dp"
        android:layout_height="60dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="Register"
        android:id="@+id/buttonRegister"
        android:layout_below="@+id/editTextPassRegister"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Please Enter Your Info"
        android:id="@+id/textView4"
        android:textColor="#0000FF"
        android:layout_marginBottom="61dp"
        android:layout_above="@+id/editTextEmailRegister"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Email"
        android:id="@+id/textView3"
        android:textColor="#0000FF"
        android:layout_marginTop="144dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/editTextEmailRegister"
        android:layout_alignStart="@+id/editTextEmailRegister" />

</RelativeLayout>
